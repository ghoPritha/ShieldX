<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dashboardBackground"
    android:id="@+id/drawerLayout"
    android:fitsSystemWindows="true"
    tools:context=".HomePage"
    >
<!--    tools:openDrawer="start"-->

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layoutHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_background"
            android:padding="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/scrollHome"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/testHello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/hello"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/testHello"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/testHello"
                app:layout_constraintTop_toTopOf="parent" />
            <!--            app:tint="@color/white" />-->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/white"
                app:navigationIcon="@drawable/ic_settings" />


        </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollHome"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutHeader">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layoutSettings"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="22sp"
                android:background="@drawable/rectangular_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15sp"
                app:layout_constraintDimensionRatio="H, 1:1"
                app:layout_constraintEnd_toStartOf="@id/layoutContacts"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/settingsImage"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:layout_margin="8sp"
                    android:padding="8sp"
                    android:src="@drawable/settings" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/setting"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutContacts"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="22sp"
                android:background="@drawable/rectangular_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15sp"
                app:layout_constraintDimensionRatio="H, 1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/layoutSettings"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/addFollowers"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:layout_margin="8sp"
                    android:src="@drawable/ic_contacts"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/contacts"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutFavorites"
                android:layout_width="170sp"
                android:layout_height="171sp"
                android:layout_marginTop="22sp"
                android:background="@drawable/rectangular_background"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintDimensionRatio="H, 1:1"
                app:layout_constraintEnd_toStartOf="@id/layoutContacts"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutSettings">

                <ImageView
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:layout_margin="8sp"
                    android:src="@drawable/ic_favourites"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/pastActivities"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutMyFollower"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="22sp"
                android:background="@drawable/rectangular_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15sp"
                app:layout_constraintDimensionRatio="H, 1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/layoutSettings"
                app:layout_constraintTop_toBottomOf="@id/layoutContacts">

                <ImageView
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:layout_margin="8sp"
                    android:src="@drawable/ic_followers"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/follower"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!--            <androidx.constraintlayout.widget.ConstraintLayout-->
            <!--                android:layout_width="0sp"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="22sp"-->
            <!--                android:background="@drawable/trending_background"-->
            <!--                android:padding="20sp">-->

            <!--            </androidx.constraintlayout.widget.ConstraintLayout>-->

            <RelativeLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="120sp"
                android:background="@drawable/trending_background"
                android:padding="5sp"
                app:layout_constraintEnd_toEndOf="@id/layoutMyFollower"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/layoutSettings"
                app:layout_constraintTop_toBottomOf="@id/layoutFavorites">

                <TextView
                    android:id="@+id/newActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="15sp"
                    android:textColor="@color/colorPrimaryLight"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/newActivityButton"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/newActivity"
                    app:layout_constraintTop_toTopOf="parent" />
            </RelativeLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.drawerlayout.widget.DrawerLayout>