<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="700sp"
    android:paddingTop="20sp"
    android:background="@drawable/teal_background"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="wrap_content"
        android:layout_height="200sp"
        android:orientation="vertical"
        android:layout_margin="20sp">

        <ImageView
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:layout_gravity="top"
            android:src="@drawable/ic_woman" />

        <TextView
            android:id="@+id/navBar_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="@string/userName"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="28sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/navBar_userEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="@string/userEmail"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="410sp"
        android:layout_height="440sp"
        android:orientation="vertical"
        android:background="@color/white">

        <Button
            android:id="@+id/navBar_about_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:layout_marginLeft="11sp"
            android:padding="0sp"
            android:text="About"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:textSize="17sp"
             />

        <Button
            android:id="@+id/navBar_logout_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="15sp"
            android:text="Logout"
            style="?android:attr/borderlessButtonStyle"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="17sp"
             />
    </LinearLayout>

</LinearLayout>