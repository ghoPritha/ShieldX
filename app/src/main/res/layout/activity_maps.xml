<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MapsActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />
    <LinearLayout
        android:id="@+id/transportOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="150sp">

        <ImageView
            android:id="@+id/driving"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:background="@color/colorTrendingEnd"
            android:padding="8sp"
            android:layout_margin="2sp"
            android:src="@drawable/driving" />


        <ImageView
            android:id="@+id/cycling"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:background="@color/colorTrendingEnd"
            android:padding="8sp"
            android:layout_margin="2sp"

            android:src="@drawable/bicycle" />

        <ImageView
            android:id="@+id/walking"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:background="@color/colorTrendingEnd"
            android:padding="8sp"
            android:layout_margin="2sp"
            android:src="@drawable/walking" />
    </LinearLayout>

    <!--    <fragment android:id="@+id/autocomplete_fragment"-->
    <!--        android:layout_width="350dp"-->
    <!--        android:layout_height="44dp"-->
    <!--        android:layout_marginTop="54dp"-->
    <!--        android:layout_marginLeft="10dp"-->
    <!--        android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"-->
    <!--        />-->

    <LinearLayout
        android:id="@+id/locationSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTrendingStart"
        android:layout_gravity="bottom"
        android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_source"/>
        <EditText
            android:id="@+id/startlocation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/circular_background"
            android:gravity="center"
            android:layout_marginBottom="6dp"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:hint=" Enter Start Location"
            android:textColorHint="@color/cian" />
</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_destination"/>

        <EditText
            android:id="@+id/destinationLocation"
            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/circular_background"
            android:gravity="center"
            android:hint="Enter Destination"
            android:textColorHint="@color/cian" />
        </LinearLayout>
    </LinearLayout>


    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotationX="2"
        android:src="@drawable/ic_back" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/etd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:hint="Expected time"
            android:src="@drawable/ic_search"
            android:background="@color/teal_700"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:padding="20dp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/countDownTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/text_view_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="00:00"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/button_start_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_countdown"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_start" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/followerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="140sp"
            tools:ignore="MissingConstraints"
            tools:listitem="@layout/item_contact" />
    </LinearLayout>

    <ImageView
        android:id="@+id/alertButton"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:src="@drawable/siren"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="460sp"/>

</FrameLayout>